    let flag: bool = 1;
    
    return 0;
}

// Numbers: decimal, hex, binary
fn numbers() -> i32 {
    let dec: i32 = 42;
    let hex: i32 = 0xFF;
    let bin: i32 = 0b1010;
    let negative: i32 = -100;
    
    return dec + hex + bin;
}

// Operators: +, -, *, /, ==, !=, <, >, <=, >=
fn operators(x: i32, y: i32) -> i32 {
    if x == y {
        return 0;
    }
    if x != y {
        return 1;
    }
    if x < y {
        return -1;
    }
    if x > y {
        return 1;
    }
    if x <= y {
        return 0;
    }
    if x >= y {
        return 0;
    }
    
    let sum: i32 = x + y;
    let diff: i32 = x - y;
    
    return sum;
}

// Main entry point
fn main() -> i32 {
    let result: i32 = factorial(5);
    count_to_ten();
    
    let nums: i32 = numbers();
    let ops: i32 = operators(10, 20);
    
    return result + nums + ops;  // Return arrow: ->
}
