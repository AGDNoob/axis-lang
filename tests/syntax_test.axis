// AXIS Sample Code - Test Syntax Highlighting
// This file demonstrates all AXIS language features

// Keywords: fn, let, mut, return
fn factorial(n: i32) -> i32 {
    if n <= 1 {
        return 1;
    }
    return n * factorial(n - 1);
}

// Control flow: while, break, continue
fn count_to_ten() {
    let mut i: i32 = 0;
    while i < 10 {
        i = i + 1;
        if i == 5 {
            continue;
        }
        if i == 8 {
            break;
        }
    }
}

// Types: i8, i16, i32, i64, u8, u16, u32, u64, bool, ptr
fn types_demo() -> i32 {
    let a: i8 = 127;
