{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AXIS",
  "scopeName": "source.axis",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.axis",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.axis",
          "match": "\\b(if|else|while|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.axis",
          "match": "\\b(fn|let|mut|syscall)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.axis",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|bool|ptr)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.axis",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.axis",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.axis",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.axis",
          "match": "\\b-?[0-9][0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.axis",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.axis",
              "match": "\\\\(n|r|t|\\\\|'|\"|0)"
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.axis",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.axis",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.axis",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.axis",
          "match": "->"
        }
      ]
    }
  }
}
